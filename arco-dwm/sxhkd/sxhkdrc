#################################################################
# KEYBOARD BINDINGS FOR ANY TWM
#################################################################

#################################################################
# SUPER + FUNCTION KEYS
#################################################################

#Virtualbox
super + F7
    virtualbox

#Thunar
super + F8
    thunar

#Spotify
super + F10
    spotify

#Rofi
super + F12
    rofi -show drun

#################################################################
# SUPER + ... KEYS
#################################################################

#Browser
super + w
    brave

#arcolinux-logout
super + x
    arcolinux-logout

#Pavucontrol
super + v
    pavucontrol

#Xkill
super + Escape
    xkill

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#alacritty
#Terminal
super + shift + Return
	alacritty

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

